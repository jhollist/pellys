byPerson301Avg<-by(stats301_noNA,stats301_noNA$Name,avg301)
byPairCricket<-do.call("rbind",byPairCricket)
byPerson301<-do.call("rbind",byPerson301)
byPerson301Avg<-do.call("rbind",byPerson301Avg)


